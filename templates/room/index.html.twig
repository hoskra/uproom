{% extends 'layout.html.twig' %}

{% block title %}
	Místnosti
{% endblock %}

{% block breadcrumbs %}
	<li>uproom</li>
	<li>místnosti</li>
{% endblock %}

{% block content %}

  <table>
	<div class="row pb-2">
		<div class="col-10">
			<div class="row">
				<div class="col-8" id="filter_global">
					<input type="text" class="global_filter form-control" id="global_filter" />
				</div>
				<button class="col-4 btn btn-secondary" id="advanced_search_button">vice</button>
			</div>
		</div>
	</div>

	<div class="row pb-2">
		<div class="col-10">
			<div id="advanced_search" class="card row">
				<div class="col-4">
					<div id="filter_col0" data-column="0" class="filter-container">
						<div class="caption">Název</div>
						<div>
							<input type="text" class="form-control column_filter" id="col0_filter" />
						</div>
					</div>
					<div id="filter_col1" data-column="1" class="filter-container">
						<div class="caption">Budova</div>
						<div>
							<input type="text" class="form-control column_filter" id="col1_filter" />
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<table id="example" class="table table-striped table-bordered" style="width:100%">
		<thead>
		<tr>
			<th>Název</th>
			<th>Budova</th>
		</tr>
		</thead>
		<tbody>
			{% for room in rooms %}
				<tr>
					<td>{{ room.name }}</td>
					<td>{{ room.building }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


	{# <div class="row my-3 py-4">
		<div class="col-6">
